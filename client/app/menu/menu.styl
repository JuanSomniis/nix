.content-right
  align-items center
  padding-right 1%

.content-right .md-button.md-icon-button
  color #efeae1

.content-brand
  background-image url($fondo-nav)

.gradient
  width 100%
  height 100%
  background -moz-linear-gradient(right, rgba(17, 110, 183, 0.72) 0%, #584b4f 100%) /* FF3.6-15 */
  background -webkit-linear-gradient(right, rgba(17, 110, 183, 0.72) 0%,#584b4f 100%) /* Chrome10-25,Safari5.1-6 */
  background linear-gradient(to right, rgba(17, 110, 183, 0.72) 0%,#584b4f 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

.mort.ng-scope, .mort
  height 100%

md-toolbar.md-menu-toolbar
  color $font-color

.md-toolbar-tools
	color $font-color!important

md-menu-bar md-menu button
	color #efeae1

.menu, md-menu-bar button, .title
  min-height 50px!important

md-menu-bar
  padding-left 10px!important

md-menu-bar.md-default-theme md-menu.md-open > button,
md-menu-bar md-menu.md-open > button,
md-menu-bar.md-default-theme md-menu > button:focus,
md-menu-bar md-menu > button:focus,
.title:focus
    outline none
    background transparent!important

.title
  font-size 28px
  font-weight bold
  letter-spacing 2px
  color #efeae1
  margin 0
  border 0
  background-color transparent
  height: 40px
  padding-left 25%

md-toolbar.menu
  background-color #584b4f!important

md-menu-content
  background-color rgb(88, 75, 79)


md-menu-item md-icon,
md-menu-item button
  color #efeae1!important



